
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutFormSub.cshtml";
}
<style>
    .main {
        background: #7f2c2c;
    }
    .form-submit:hover {
        background-color: #1c8500;
    }
</style>
@using (Html.BeginForm("Login", "Default", FormMethod.Post, new { @class = "form", id = "form-2" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <h3 class="heading">Đăng nhập quản trị</h3>

    <div class="spacer"></div>

    if (!string.IsNullOrEmpty(ViewBag.ThongBao))
    {
        <div class="form-group invalid">
            <span class="form-message">@ViewBag.ThongBao</span>
        </div>
    }

    <div class="form-group">
        <label for="TaiKhoan" class="form-label">Tài khoản</label>
        <input id="TaiKhoan" name="UserAdmin" type="text" placeholder="abc" class="form-control">
        <span class="form-message"></span>
        <span class="form-message">@ViewData["LoiTenTaiKhoan"]</span>

    </div>

    <div class="form-group">
        <label for="MatKhau" class="form-label">Mật khẩu</label>
        <input id="MatKhau" name="PassAdmin" type="password" placeholder="Nhập mật khẩu" class="form-control">
        <span class="form-message"></span>
        <span class="form-message">@ViewData["LoiMatKhau"]</span>

    </div>



    <button type="submit" class="form-submit">Đăng nhập</button>
}


<script src="~/assets/formSubmit/validater.js"></script>
<script>

    document.addEventListener('DOMContentLoaded', function () {
        // Mong muốn của chúng ta
        Validator({
            form: '#form-2',
            formGroupSelector: '.form-group',
            errorSelector: '.form-message',
            rules: [
                Validator.isRequired('#TaiKhoan', 'Vui lòng nhập tên tài khoản'),
                Validator.isRequired('#MatKhau', 'Vui lòng nhập mật khẩu'),
